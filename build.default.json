{
	"style/**/*.scss": {
		"require": {
			"sass": "*"
		},
		"execute": {
			"command": "sass",
			"arguments": "style/main.scss www/style.css"
		}
	},
	"style/**/*.js": {
		"require": {
			"node": "*",
			"babel": "*"
		},
		"execute": {
			"command": "babel",
			"arguments": "style/main.js www/script.js"
		}
	}
}