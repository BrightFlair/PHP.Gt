{
	"style/**/*.scss": {
		"require": {
			"sass": "*"
		},
		"execute": {
			"command": "sass",
			"arguments": "--cache-location style/.sass-cache style/main.scss www/style.css"
		}
	},
	"script/**/*.es6": {
		"require": {
			"node": "*",
			"babel": "*",
			"webpack": "*"
		},
		"execute": {
			"command": "webpack",
			"arguments": "script/main.es6 -o www/script.js --devtool source-map --module-bind js=babel-loader"
		}
	},
	"asset/**/*": {
		"require": {
			"rsync": ">=3.0.0"
		},
		"execute": {
			"command": "rsync",
			"arguments": "-a asset/ www/asset --delete"
		}
	}
}