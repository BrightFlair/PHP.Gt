{
	"style/**/*.scss": {
		"require": {
			"sass": "*"
		},
		"execute": {
			"command": "sass",
			"arguments": "--cache-location style/.sass-cache style/main.scss www/style.css"
		}
	},
	"style/**/*.js": {
		"require": {
			"node": "*",
			"babel": "*"
		},
		"execute": {
			"command": "babel",
			"arguments": "style/main.js www/script.js"
		}
	},
	"asset/**/*": {
		"require": {
			"rsync": ">=3.0.0"
		},
		"execute": {
			"command": "rsync",
			"arguments": "-a asset/ www/asset --delete"
		}
	}
}